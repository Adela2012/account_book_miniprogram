.weui-navbar {
  background: #FFFFFF;
  display: flex;
  position: fixed;
  z-index: 500;
  top: 0;
  left: 0px;
  width: 100%;
  box-sizing: border-box;
}

.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  /* padding: 32rpx 0; */
  text-align: center;
  font-size: 0
}

.weui-navbar__title {
  /* color: #353535; */
  display: inline-block;
  font-size: 28rpx;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  transition: all 0.2s ease;
}

