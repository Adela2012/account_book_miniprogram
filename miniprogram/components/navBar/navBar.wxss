.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: -1rpx;
  /* width: 64px;
  height: 4rpx;
  background-color: #CB1933; */
  -webkit-transition: -webkit-transform .3s;
  transition: transform .3s, -webkit-transform .3s
}
